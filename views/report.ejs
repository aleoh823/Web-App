<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Progress Report</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <link rel="stylesheet" href="/stylesheets/stuffStyle.css">
</head>

<body>

    <!-- Actual page content! -->
    <div class="container">
        <div class="section flow-text" id="stuffDetail">
            <h1>Progress Details: </h1>
            <table>
                <tr>
                    <th>Technique:</th>
                    <td><%= technique  %></td>
                </tr>
                <tr>
                    <th>Mastered:</th>
                    <td> 
                        <form action="#">
                           <p>
                             <label>
                               <input type="checkbox" class="filled-in" 
                                <% if (mastered == 1) { %>
                                   checked
                                <% } %>
                               />
                               <span></span>
                             </label>
                           </p> 
                         </form> 
                    </td>

                </tr>
                <tr>
                    <th>Progress Report:</th>
                    <td>
                        <%= progress_report  %>
                    </td>
                </tr>
            </table>
        </div>

        <div class="section" id="stuffControls">
            <a class="btn-large waves-effect waves-light orange left modal-trigger" href="/skillset">
                <i class="material-icons right">edit</i>Edit
            </a>
            <a class="btn-large waves-effect waves-light red right" href="/skillset/report/<%=id%>/delete">
                <i class="material-icons right">delete</i>Delete
            </a>
        </div>


        <div class="modal" id="stuffEdit">

            <div class="modal-content">

                <h2>Edit:</h2>
                <form method="post" action="/skillset/report/<%= id%>">
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="technique">Technique:</label>
                            <input type="text" name="technique" class="validate" data-length="32" required>
                        </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="progress_report">Progress Report:</label>
                            <input type="text" name="progress_report" data-length="100">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn waves-effect waves-light " type="submit"><i
                                class="material-icons right">send</i>Submit</button>

                        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Never Mind</a>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script> M.AutoInit();</script>
    
</body>

</html>